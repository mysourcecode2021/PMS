@{
    var data = (PagingModel<List<dynamic>>)ViewData["DataList"]!;
}

@if (data != null)
{
    if (data.TotalRecords > 0)
    {
        <div class="row">
            <div class="col-12">
                @await Html.PartialAsync("~/Views/Shared/_Paging.cshtml", data)
            </div>
        </div>
    }
}

<table class="table table-head-fixed text-nowrap table-striped" id="_grid">
    <thead>
        <tr>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
        </tr>
        <tr>
            <th>Periode</th>
            <th>NIK</th>
            <th>Name</th>
            <th>Department</th>
            <th>Position</th>
            <th>PPh21</th>
        </tr>
    </thead>
    <tbody>
        @if (data != null)
        {
            if (data.Data.Count > 0)
            {
                foreach (var r in data.Data)
                {
                    <tr>
                        <td>@r.Periode</td>
                        <td>@r.NIK</td>
                        <td>@r.Name</td>
                        <td>@r.DepartmentName</td>
                        <td>@r.PositionName</td>
                        <td>@string.Format("{0:#,0.00}", r.PPH21)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9" align="center"><b>Data Not Found</b></td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    $(function () {
        var cn = "@data?.Data.Count";
        if (cn != "0") {
            $("#btnEdit").show();
            $("#btnDelete").show();
            $("#btnExport").show();
            $("#btnExportMonth").show();
            $("#btnExportYear").show();
        } else {
            $("#btnEdit").hide();
            $("#btnDelete").hide();
            $("#btnExport").hide();
            $("#btnExportMonth").hide();
            $("#btnExportYear").hide();
        }
    });
</script>