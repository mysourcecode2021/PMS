@{
    var data = (PagingModel<List<dynamic>>)ViewData["DataList"]!;
}

@if (data != null)
{
    if (data.TotalRecords > 0)
    {
        <div class="row">
            <div class="col-12">
                @await Html.PartialAsync("~/Views/Shared/_Paging.cshtml", data)
            </div>
        </div>
    }
}

<table class="table table-head-fixed text-nowrap table-striped" id="_grid">
    <thead>
        <tr>
            <th>&nbsp;</th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
            <th><input type="text" class="form-control _searchCriteria" onkeypress="searchFilter(event)" /></th>
        </tr>
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th>Finger Id</th>
            <th>NIK</th>
            <th>Name</th>
            <th>Date In</th>
            <th>Time In</th>
            <th>Time Out</th>
            <th>Exestime</th>
            <th style="display: none">Amount</th>
            <th>Jadwal</th>
        </tr>
    </thead>
    <tbody>
        @if (data != null)
        {
            if (data.Data.Count > 0)
            {
                foreach(var r in data.Data)
                {
                    <tr>
                        <td><input type="checkbox" data-key="@r.FingerId|@r.DateIn.ToString("MM/dd/yyyy")" class="checkboxes" /></td>
                        <td>@r.FingerId</td>
                        <td>@r.NIK</td>
                        <td>@r.Name</td>
                        <td>@r.DateIn.ToString("MM/dd/yyyy")</td>
                        <td>@r.TimeIn</td>
                        <td>@r.TimeOut</td>
                        <td>@r.TotalOT</td>
                        <td style="display: none">@((r.Amount != null) ? string.Format("{0:#,0.00}", r.Amount) : "")</td>
                        <td>@r.CategoryOT</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" align="center"><b>Data Not Found</b></td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    $(function () {
        var cn = "@data?.Data.Count";
        if (cn != "0") {
            $("#btnEdit").show();
            $("#btnDelete").show();
            $("#btnExport").show();
        } else {
            $("#btnEdit").hide();
            $("#btnDelete").hide();
            $("#btnExport").hide();
        }
    });
</script>